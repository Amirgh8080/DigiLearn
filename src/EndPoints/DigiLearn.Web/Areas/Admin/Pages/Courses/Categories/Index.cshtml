@page
@model DigiLearn.Web.Areas.Admin.Pages.Courses.Categories.IndexModel
@{
    ViewData["title"] = "مدیریت دسته بندی ها";
    ViewData["selected"] = "courses_categories";
}
<a asp-page="Add" class="btn btn-success mb-1">افزودن دسته بندی جدید</a>
<div class="card">
    <div class="table-responsive card-body p-0 mb-0">
        <table class="table table-bordered table-hover mb-0">
            <thead class="thead-light">
                <tr>
                    <th>عنوان</th>
                    <th>اسلاگ</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Categories.Where(r => r.ParentId == null))
                {
                    <tr>
                        <div class="card-header" id="h_@item.Id">
                            <h5 class="mb-0">
                                <button class="btn btn-link" data-toggle="collapse" data-target="#a_@item.Id" aria-expanded="true" aria-controls="a_@item.Id">
                                    @item.Title
                                </button>
                            </h5>
                        </div>
                

                        <div id="a_@item.Id" class="collapse" aria-labelledby="h_@item.Id" data-parent="#accordion">

                            @foreach (var child in item.Children)
                            {
                                <tr>
                                    <td>@child.Title</td>
                                    <td>@child.Slug</td>
                                    <td>
                                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm mb-1">ویرایش</a>
                                        <delete-item></delete-item>
                                    </td>
                                </tr>
                            }
                        </div>
                    </tr>
                }
            </tbody>
    </table>
</div>
