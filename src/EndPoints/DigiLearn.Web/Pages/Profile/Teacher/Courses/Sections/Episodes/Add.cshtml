@page "{courseId}/{sectionId}"
@model DigiLearn.Web.Pages.Profile.Teacher.Courses.Sections.Episodes.AddModel
@{
    ViewData["Title"] = "اضافه کردن قسمت جدید";
    Layout = "Shared/_ProfileLayout";
}
<div class="row ">
    <div class="col-12 info shadow pl-0 pr-0">
        <p class="title">
            <i class="fa fa-paper-plane"></i>
            @ViewData["Title"]
        </p>
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="col-12 col-lg-6 col-md-6 ">
                @Html.EditorFor(t=>t.Title)
            </div>
            <div class="col-12 col-lg-6 col-md-6 ">
                @Html.EditorFor(t=>t.EnglishTitle)
            </div>
            <div class="col-12 col-lg-12 col-md-6 ">
                @Html.EditorFor(t=>t.TimeSpan)
            </div> 
            <div class="col-12 col-lg-6 col-md-6 ">
                @Html.EditorFor(t=>t.VideoFile)
            </div> 
            <div class="col-12 col-lg-6 col-md-6 ">
                @Html.EditorFor(t=>t.AttachmentFile)
            </div> 

            <div class="col-12">
                <button class="btn btn-save my-3">ثبت اطلاعات</button>
            </div>
        </form>
    </div>
</div>
